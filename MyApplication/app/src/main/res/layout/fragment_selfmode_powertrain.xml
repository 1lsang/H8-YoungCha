<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_power_img"
        android:layout_width="0dp"
        android:layout_height="376dp"
        android:background="@color/main_hyundai_blue"
        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_power_train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:text="@string/power_train"
        android:textColor="@color/cool_grey_black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/v_option1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sub_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select"
        android:textColor="@color/cool_grey_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_power_train"
        app:layout_constraintStart_toEndOf="@+id/tv_power_train"
        app:layout_constraintTop_toTopOf="@+id/tv_power_train" />

    <View
        android:id="@+id/v_option1"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="31dp"
        android:background="@color/cool_grey_003"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_option2"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/v_option2"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginEnd="16dp"
        android:background="@color/cool_grey_003"
        app:layout_constraintBottom_toBottomOf="@+id/v_option1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_option1"
        app:layout_constraintTop_toTopOf="@+id/v_option1" />

</androidx.constraintlayout.widget.ConstraintLayout>