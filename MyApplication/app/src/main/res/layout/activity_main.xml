<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_guide"
            android:layout_width="0dp"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_guide_mode_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/guide_mode_name_en"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_guide"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:text="@string/leblanc_price_kr"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_guide"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_sub_script"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:text="@string/guide_mode_explain_txt"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_guide_mode_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_main_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:layout_marginStart="20dp"
            android:text="@string/main_feature"
            android:textColor="@color/cool_grey_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_guide" />

        <ImageView
            android:id="@+id/iv_main_feature"
            android:layout_width="0dp"
            android:layout_height="174dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_feature" />

        <View
            android:id="@+id/v_guideline"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/cool_grey_001"
            app:layout_constraintTop_toBottomOf="@id/iv_main_feature" />

        <TextView
            android:id="@+id/tv_guide_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:text="@string/guide_process"
            android:textColor="@color/cool_grey_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_main_feature"
            app:layout_constraintTop_toBottomOf="@id/v_guideline" />

        <ImageView
            android:id="@+id/iv_guide_process"
            android:layout_width="0dp"
            android:layout_height="271dp"
            android:layout_marginHorizontal="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_guide_process" />

        <View
            android:id="@+id/v_guideline2"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/cool_grey_001"
            app:layout_constraintTop_toBottomOf="@id/iv_guide_process" />

        <TextView
            android:id="@+id/tv_guide_target_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:text="@string/guide_target_user"
            android:textColor="@color/cool_grey_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_main_feature"
            app:layout_constraintTop_toBottomOf="@id/v_guideline2" />

        <ImageView
            android:id="@+id/iv_guide_target_user"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_margin="16dp"

            android:background="@drawable/style_round"
            android:backgroundTint="@color/cool_grey_001"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_guide_target_user" />

        <ImageView
            android:id="@+id/iv_best1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_best"
            app:layout_constraintStart_toStartOf="@id/iv_guide_target_user"
            app:layout_constraintTop_toTopOf="@id/iv_guide_target_user" />

        <TextView
            android:id="@+id/tv_best1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="차를 구매해야 하는데, 정보가 너무 부족해요."
            android:textColor="@color/cool_grey_004"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_best1"
            app:layout_constraintStart_toEndOf="@id/iv_best1"
            app:layout_constraintTop_toTopOf="@id/iv_best1" />

        <ImageView
            android:id="@+id/iv_best2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_best"
            app:layout_constraintStart_toStartOf="@id/iv_best1"
            app:layout_constraintTop_toBottomOf="@id/iv_best1" />

        <TextView
            android:id="@+id/tv_best2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="제 상황에 딱맞는 옵션이 뭔지 궁금해요."
            android:textColor="@color/cool_grey_004"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_best2"
            app:layout_constraintStart_toEndOf="@id/iv_best2"
            app:layout_constraintTop_toTopOf="@id/iv_best2" />

        <ImageView
            android:id="@+id/iv_best3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_best"
            app:layout_constraintStart_toStartOf="@id/iv_best2"
            app:layout_constraintTop_toBottomOf="@id/iv_best2" />

        <TextView
            android:id="@+id/tv_best3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="차에 대해 잘 몰라서 어디서부터 무엇을\n선택해야할 지 모르겠어요."
            android:textColor="@color/cool_grey_004"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_best3"
            app:layout_constraintTop_toTopOf="@id/iv_best3" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>