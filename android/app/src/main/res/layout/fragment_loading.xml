<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="133dp"
        android:indeterminate="false"
        android:max="100"
        android:progressBackgroundTint="@color/cool_grey_003"
        android:progressDrawable="@drawable/circle_progressbar"
        android:progressTint="@color/main_hyundai_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_animation"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/ic_change"
        app:layout_constraintBottom_toBottomOf="@id/pb_progressbar"
        app:layout_constraintEnd_toEndOf="@id/pb_progressbar"
        app:layout_constraintStart_toStartOf="@id/pb_progressbar"
        app:layout_constraintTop_toTopOf="@id/pb_progressbar" />


    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/loading_main_text"
        android:textAlignment="center"
        android:textColor="@color/cool_grey_black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_animation" />

    <ImageView
        android:id="@+id/iv_load_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_loading1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <TextView
        android:id="@+id/tv_load_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/loading_engine"
        android:textColor="#9D9FA3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_load_engine"
        app:layout_constraintStart_toEndOf="@id/iv_load_engine"
        app:layout_constraintTop_toTopOf="@id/iv_load_engine" />

    <ImageView
        android:id="@+id/iv_load_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_loading1"
        android:backgroundTint="@color/cool_grey_003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_load_engine" />

    <TextView
        android:id="@+id/tv_load_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/loading_color"
        android:textColor="#9D9FA3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_load_color"
        app:layout_constraintStart_toEndOf="@id/iv_load_color"
        app:layout_constraintTop_toTopOf="@id/iv_load_color" />

    <ImageView
        android:id="@+id/iv_load_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_loading1"
        android:backgroundTint="@color/cool_grey_003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_load_color" />

    <TextView
        android:id="@+id/tv_load_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/loading_option"
        android:textColor="#9D9FA3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_load_option"
        app:layout_constraintStart_toEndOf="@id/iv_load_option"
        app:layout_constraintTop_toTopOf="@id/iv_load_option" />


<!--    <include-->
<!--        android:id="@+id/layout_estimate_ready"-->
<!--        layout="@layout/layout_estimate_ready"-->
<!--        android:visibility="invisible"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>